{
  "manifest_version": 3,
  "name": "Text Tools - Humanize",
  "version": "2.1.0",
  "description": "Humanize text with customizable styles using local LLM. Privacy-focused and offline.",
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "action": {
    "default_popup": "popup.html",
    "default_title": "Text Tools"
  },
  "permissions": [
    "storage",
    "clipboardWrite"
  ],
  "host_permissions": [
    "http://localhost/*",
    "http://127.0.0.1/*"
  ]
}
